<!-- If the user is logged in the followin information is available here:
- currentUser.id
- currentUser.email
- currentUser.name
-->

  <% if (currentUser.id) { %>


   <nav class="navbar navbar-light bg-light justify-content-between">
      <img id="logo" src="/images/LR.png">
       <a class="navbar-brand"><%= currentUser.email %></a>
      <input name="searchText" class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
      <button id = "searchURL" name="searchButton">Search</button>

      <form action="/logout" method="POST" style="margin:20px;">

      <button class="btn btn-outline-success my-2 my-sm-0">Logout</button>

    </form>
    </nav>


  <% }

  else{ %>

   <nav class="navbar navbar-light bg-light justify-content-between">
      <img id="logo" src="/images/LR.png">

      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Login</button>
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Register</button>
    </nav>

  <% } %>


